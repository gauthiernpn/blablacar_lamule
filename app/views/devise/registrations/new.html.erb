<br/>
<div class="well text-right row">
  <span class="singup-login-text">
    Already a member?
  </span>
  <span class="signup-login-span">
    <%= link_to 'login', 'javascript:void(0);', class: 'btn btn-primary login-btn', data: { container: 'body', toggle: 'popover', placement: 'auto', content: "", html: 'true' } %>
  </span>
</div>

<div class="row">
  <div class="col-lg-6 col-lg-offset-1">
    <h2 class="text-center">Not yet a member? Sign up for free</h2>

    <div class="authform join-form">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form' }) do |f| %>

          <div class="center-block text-center">
            <h2>In just <span>2 seconds </span></h2>

            <div class="social-signin facebook-signin">
              <%= link_to "#{image_tag 'user/fb-btn-large.png'} <span>Sign up with Facebook  </span> ".html_safe, user_omniauth_authorize_path(:facebook), class: 'button' %>
            </div>
            <p class="margin-top size14"></p>
          </div>

          <p class="menu-separator"><span>or</span></p>

          <div class="center-block text-center">
            <h2>In just <span>30 seconds </span></h2>
          </div>
          <div class="form-area">
            <div class="form-group">
              <%= f.select :gender, options_for_select(GlobalConstants::GENDER_TYPES), { prompt: "Gender" }, class: "form-control" %>
              <%= handle_error_text(resource, :gender) %>
            </div>
            <div class="form-group">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "First name" %>
              <%= handle_error_text(resource, :first_name) %>
            </div>
            <div class="form-group">
              <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: "Last name" %>
              <%= handle_error_text(resource, :last_name) %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
              <%= handle_error_text(resource, :email) %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
              <%= handle_error_text(resource, :password) %>
            </div>
            <div class="form-group confirmation) %>">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password confirmation" %>
              <%= handle_error_text(resource, :password_confirmation) %>
            </div>
            <div class="form-group">
              <%= f.select :birth_year, options_for_birth_year_select, { prompt: "Birth year" }, class: "form-control" %>
              <%= handle_error_text(resource, :birth_year) %>
            </div>
            <div class="checkbox">
              <%= f.check_box :receive_updates %>
              <%= f.label :receive_updates, "Receive updates on new features, or useful information for you" %>
            </div>
            <%= f.submit 'Get started now', :class => 'button right' %>
          </div>
      <% end %>
    </div>
  </div>

  <div class="col-lg-3">
    <%= render '/shared/like_the_facebook' %>
    <%= render '/shared/tutorial_video' %>
  </div>
</div>
